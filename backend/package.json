{
  "name": "calorietracker-backend",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec node --loader ts-node/esm src/api/server.ts",
    "start": "node dist/api/server.js",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:dry-run": "node scripts/migrate.js dry-run",
    "seed": "node scripts/seed.js",
    "test": "NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "echo 'Lint scaffold ready. Add ESLint in Phase 2.'",
    "build": "tsc"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^8.0.1",
    "pg": "^8.13.1",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^30.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
