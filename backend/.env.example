NODE_ENV=development
PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/calorietracker
APP_TIMEZONE=Europe/Zurich
GDPR_EXPORT_FORMAT=json

# Security
API_KEY_HEADER=X-API-Key
IDEMPOTENCY_KEY_HEADER=X-Idempotency-Key

# CORS
CORS_ORIGIN=http://localhost:3000

# Testing
TEST_DATABASE_URL=postgres://postgres:postgres@localhost:5432/calorietracker_test

# Priority 2 Features

# GDPR Erasure Job
GDPR_ERASURE_GRACE_PERIOD_DAYS=30
GDPR_JOB_RUN_INTERVAL_MINUTES=60

# Notification Delivery (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=noreply@calorietracker.com

# Reminder Job
NOTIFICATION_JOB_RUN_INTERVAL_MINUTES=30
